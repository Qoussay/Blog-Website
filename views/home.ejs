<%- include('partials/header') %>

<h1>Home</h1>
<p><%= homeStartingContent %> </p>

<% entries.forEach( (entry) => {%>
<div class="blog-entry">
    <h2><%= entry.title %> </h2>

    <% if (entry.body.length < 100) { %>
    <p><%= entry.body %></p>
    <% } else {  %>
    <p><%= entry.body.substring(0, 100) + " ..."%></p>
    <a href="/posts/<%=entry._id%>">Read More</a>
    <% } %>

</div>

<% }); %>

<%- include('partials/footer') %>